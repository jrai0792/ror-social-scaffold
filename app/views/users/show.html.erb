<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <%= form_for(@user, url: user_invitations_path(@user), method: 'POST') do |f|%>
    <%= f.submit "Follow"%>
  <%end%>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
