<h1>Pending Invitations</h1>


<% @invitations.each do |invitation|%>
  <% check_status?(invitation)%>
    <p> <%=invitation.sender.name %>
      <%= form_for(invitation, url: user_friendships_path(invitation), method: 'POST') do |f| %>
          <%= hidden_field_tag 'sender_id', invitation.sender_id%>
          <%= f.submit "Accept" %>
          <%= f.submit "Decline" %>
      <%end%>
    </p>
<%end%>